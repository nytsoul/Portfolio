# ================================
# CONVEX BACKEND CONFIGURATION
# ================================
# Get these values by running 'npx convex dev'
VITE_CONVEX_URL=https://your-deployment.convex.cloud
CONVEX_SITE_URL=http://localhost:5173
CONVEX_DEPLOYMENT=dev:your-deployment

# ================================
# VLY PLATFORM (Pre-configured)
# ================================
VITE_VLY_APP_ID="your-vly-app-id"
VITE_VLY_MONITORING_URL="https://runtime-monitoring.vly.ai/runtime-error"

# ================================
# GITHUB INTEGRATION
# ================================
# Your GitHub username for fetching repositories
VITE_GITHUB_USERNAME=your-github-username

# GitHub Personal Access Token (server-side only, not exposed to client)
# Generate at: https://github.com/settings/tokens
# Permissions needed: repo (read-only)
GITHUB_TOKEN=github_pat_YOUR_TOKEN_HERE

# ================================
# PORTFOLIO CONFIGURATION
# ================================
VITE_PORTFOLIO_NAME="Your Full Name"
VITE_PORTFOLIO_LOCATION="Your City, Country"
VITE_PORTFOLIO_EMAIL=your.email@example.com
VITE_PORTFOLIO_WEBSITE=https://yourwebsite.com
VITE_PORTFOLIO_LINKEDIN=https://linkedin.com/in/your-profile
VITE_PORTFOLIO_GITHUB=your-github-username
VITE_PORTFOLIO_TAGLINE="Your professional tagline or headline"
VITE_PORTFOLIO_BIO="Brief bio about yourself, your background, and what you do."

# ================================
# ACADEMIC & PROFESSIONAL INFO
# ================================
VITE_COLLEGE_NAME="Your University Name"
VITE_COLLEGE_LOCATION="City"
VITE_DEGREE="Your Degree Program"
VITE_YEAR="Current Year (e.g., 2nd Year, Final Year)"
VITE_GPA="Your GPA"
VITE_EXPERIENCE_YEARS="Years of experience (e.g., 1+, 2+)"

# ================================
# COMPETITIVE PROGRAMMING
# ================================
VITE_CODEFORCES_USERNAME=your-codeforces-username
VITE_CODEFORCES_PROBLEMS_SOLVED=0
VITE_LEETCODE_USERNAME=your-leetcode-username
VITE_CODECHEF_USERNAME=your-codechef-username

# ================================
# PROJECTS & ACHIEVEMENTS
# ================================
VITE_PROJECTS_COMPLETED=0
VITE_TOTAL_CONTRIBUTIONS=0

# ================================
# FEATURE FLAGS
# ================================
VITE_ENABLE_GITHUB_SYNC=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_CONTACT_FORM=true
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_TYPEWRITER=true
VITE_ENABLE_ANIMATIONS=true

# ================================
# ANALYTICS (Optional)
# ================================
VITE_GOOGLE_ANALYTICS_ID=
VITE_HOTJAR_ID=
VITE_POSTHOG_KEY=

# ================================
# CONTACT FORM SERVICES (Optional)
# ================================
# Formspree: https://formspree.io/
VITE_FORMSPREE_ID=

# EmailJS: https://www.emailjs.com/
VITE_EMAILJS_SERVICE_ID=
VITE_EMAILJS_TEMPLATE_ID=
VITE_EMAILJS_PUBLIC_KEY=

# ================================
# SEO & METADATA
# ================================
VITE_SITE_URL=https://yourdomain.com
VITE_SITE_TITLE="Your Name - Portfolio"
VITE_SITE_DESCRIPTION="Brief description for search engines and social media."
VITE_SITE_KEYWORDS="portfolio,developer,your,keywords,here"
VITE_SITE_AUTHOR="Your Name"
VITE_SITE_IMAGE=/og-image.jpg

# ================================
# SOCIAL MEDIA (Optional)
# ================================
VITE_TWITTER_HANDLE=@your_twitter
VITE_FACEBOOK_PAGE=
VITE_INSTAGRAM_HANDLE=@your_instagram
VITE_YOUTUBE_CHANNEL=
VITE_MEDIUM_USERNAME=@your_medium
VITE_DEV_TO_USERNAME=your_devto

# ================================
# RESUME/CV
# ================================
VITE_RESUME_URL=/resume.pdf
VITE_CV_LAST_UPDATED=2024-01-15

# ================================
# GITHUB API CONFIGURATION
# ================================
VITE_GITHUB_API_BASE=https://api.github.com
VITE_GITHUB_CACHE_DURATION=3600000
VITE_GITHUB_MAX_REPOS=100

# ================================
# DEVELOPMENT
# ================================
NODE_ENV=development
VITE_APP_VERSION=1.0.0
VITE_BUILD_DATE=
VITE_DEBUG_MODE=false

# ================================
# PERFORMANCE
# ================================
VITE_ENABLE_SERVICE_WORKER=false
VITE_CACHE_IMAGES=true
VITE_LAZY_LOAD_IMAGES=true

# ================================
# THEME CONFIGURATION
# ================================
VITE_DEFAULT_THEME=dark
VITE_ENABLE_THEME_TOGGLE=false
VITE_PRIMARY_COLOR=#06b6d4
VITE_ACCENT_COLOR=#8b5cf6
